extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Nhập mã OTP xác thực
        form(
          action="/user/password/otp"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
              value=email
              readonly
            )
          div(class="form-group")
            label(for="otp") Mã OTP
            input(
              type="otp"
              class="form-control"
              id="otp"
              name="otp"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Xác nhận
        form(
          action="/user/password/forgot"
          method="POST"
        )
          input(
            type="email"
            class="form-control d-none"
            id="email"
            name="email"
            required
            value=email
            readonly
            )
          button(
            type="submit"
            class="btn btn-link"
          ) Gửi lại mã OTP